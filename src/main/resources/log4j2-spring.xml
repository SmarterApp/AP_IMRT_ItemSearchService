<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="PID">????</Property>
        <Property name="LOG_LEVEL_PATTERN">%5p</Property>
        <Property name="CONSOLE_LOG_PATTERN">%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}} %clr{${LOG_LEVEL_PATTERN}} %clr{${sys:PID}}{magenta} %clr{---} %clr{[%15.15t]} %clr{%-40.40c{1.}}{cyan} %clr{:} %m %n</Property>
    </Properties>
    <Appenders>
        <Gelf host="udp:${env:GRAYLOG_HOST:-localhost}" port="${env:GRAYLOG_PORT:-12201}"
              name="graylog-gelf"
              version="1.1"
              extractStackTrace="true"
              mdcProfiling="true"
              originHost="%host{fqdn}">
            <Field name="timestamp" pattern="%d{dd MMM yyyy HH:mm:ss.SSS}" />
            <Field name="level" pattern="%5p" />
            <Field name="className" pattern="%C" />
            <Field name="server" pattern="%host" />
            <DynamicMdcFields regex="mdc.*" />
            <DynamicMdcFields regex="(mdc|MDC)fields" />
        </Gelf>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${sys:CONSOLE_LOG_PATTERN}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="graylog-gelf"/>
        </Root>
    </Loggers>
</Configuration>